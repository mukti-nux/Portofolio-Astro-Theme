---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
---

<Layout title="ApplicationPage">
  <div class="relative pt-36 min-h-screen" id="app">
    <Container>
      <!-- Model Viewer di tengah halaman -->
      <div class="flex justify-center items-center">
        <model-viewer
          id="koala"
          src="/Koala.glb"
          auto-rotate
          camera-controls
          touch-action="pan-y"
          style="width: 300px; height: 300px; background: transparent;"
          exposure="1"
          environment-image="neutral"
          disable-zoom
          alt="Koala model"
        ></model-viewer>
      </div>
    </Container>
  </div>

  <!-- Model Viewer script -->
  <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>

  <script>
    const modelViewer = document.getElementById('koala');
    let targetX = 0;
    let targetY = 0;

    // Mouse move
    window.addEventListener('mousemove', (e) => {
      const x = e.clientX / window.innerWidth;
      const y = e.clientY / window.innerHeight;
      targetX = (x - 0.5) * 2;
      targetY = (y - 0.5) * 2;
    });

    // Touch move
    window.addEventListener('touchmove', (e) => {
      if (e.touches.length === 1) {
        const x = e.touches[0].clientX / window.innerWidth;
        const y = e.touches[0].clientY / window.innerHeight;
        targetX = (x - 0.5) * 2;
        targetY = (y - 0.5) * 2;
      }
    });

    // Gyroscope
    window.addEventListener('deviceorientation', (e) => {
      targetX = (e.gamma || 0) / 45;
      targetY = -(e.beta || 0) / 90;
    });

    // Animasi rotasi
    function animateModel() {
      const currentRotation = modelViewer.getCameraOrbit();
      const [theta, phi, radius] = currentRotation.replace(/deg|rad/g, '').split(' ');
      const newTheta = parseFloat(theta) + (targetX * 30 - parseFloat(theta)) * 0.1;
      const newPhi = parseFloat(phi) + (targetY * 30 - parseFloat(phi)) * 0.1;

      modelViewer.cameraOrbit = `${newTheta}deg ${newPhi}deg ${radius}`;
      requestAnimationFrame(animateModel);
    }

    animateModel();
  </script>
</Layout>
