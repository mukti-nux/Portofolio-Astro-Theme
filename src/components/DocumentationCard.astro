---
import Container from "./Container.astro";
const { title, description, imageUrl, link } = Astro.props;
---

<Container>
  <div
    class="relative max-w-2xl mx-auto mt-16 rounded-xl p-6 bg-white dark:bg-gray-900 
           transition-all duration-300 border border-transparent flex items-center space-x-6
           before:absolute before:inset-0 before:-z-10 before:rounded-xl
           before:bg-gradient-to-r before:from-cyan-400 before:via-purple-500 before:to-pink-500
           before:bg-[length:200%_200%] before:animate-gradient-move before:opacity-70 before:blur-3xl"
  >
    <!-- Gambar -->
    <img
      src={imageUrl}
      alt={title}
      class="w-32 h-32 rounded-md object-cover flex-shrink-0"
    />

    <!-- Konten teks -->
    <div class="flex-1">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{title}</h2>
      <p class="text-gray-700 dark:text-gray-300">{description}</p>
      <a
        href={link}
        class="inline-block mt-4 px-6 py-3 rounded-full bg-primary text-white font-semibold
               border-2 border-[rgb(59,130,246)] transition duration-300 hover:bg-[rgb(59,130,246)]"
      >
        GET HERE
      </a>
    </div>
  </div>
</Container>
