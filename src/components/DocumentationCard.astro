---
import Container from "./Container.astro";
const { title, description, imageUrl, link } = Astro.props;
---

<Container>
  <div class="relative max-w-2xl mx-auto mt-16 rounded-xl p-6 bg-white dark:bg-gray-900 shadow-lg transition-all duration-300 border border-transparent hover:border-[3px] hover:border-[rgb(0,255,255)] group overflow-hidden">

    <!-- Gradient Glow Border & Shadow -->
    <div class="absolute inset-0 animate-gradient-move bg-gradient-to-r from-cyan-400 via-purple-500 to-pink-500 
          bg-[length:200%_200%] bg-[position:0%_50%] blur-lg opacity-80 rounded-xl z-[-1]"></div>

    <!-- Image dan Konten -->
    <img src={imageUrl} alt={title} class="w-32 h-32 rounded-md object-cover flex-shrink-0 mb-4 sm:mb-0"/>
    <div class="flex flex-col flex-1">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-3">{title}</h2>
      <p class="text-gray-700 dark:text-gray-300 mb-6">{description}</p>
      <a href={link} class="inline-block px-6 py-3 rounded-full bg-primary text-white font-semibold border-2 border-[rgb(59,130,246)] transition duration-300 hover:bg-[rgb(59,130,246)]">
        GET HERE
      </a>
    </div>
  </div>
</Container>
