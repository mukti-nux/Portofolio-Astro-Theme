---
import Container from "./Container.astro";
const { title, description, imageUrl, link } = Astro.props;
---

<Container>
  <div
    class="max-w-4xl mx-auto mt-10 p-8 bg-white dark:bg-gray-800 rounded-lg flex flex-col sm:flex-row items-center sm:items-start space-y-6 sm:space-y-0 sm:space-x-8 border-2 transition duration-300"
    style="animation: rgbBorderGlow 4s linear infinite; border-style: solid;"
  >
    <img
      src={imageUrl}
      alt={`thumbnail ${title}`}
      class="w-32 h-32 rounded-md object-cover flex-shrink-0"
    />
    <div class="flex flex-col flex-1">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-3">{title}</h2>
      <p class="text-gray-700 dark:text-gray-300 mb-6">{description}</p>
      <div>
        <a
          href={link}
          class="relative inline-flex h-11 items-center justify-center px-6 rounded-full bg-primary text-white font-semibold border-2 transition duration-300"
          style="animation: rgbBorderGlow 4s linear infinite; border-style: solid;"
        >
          GET HERE
        </a>
      </div>
    </div>
  </div>

  <style>
    @keyframes rgbBorderGlow {
      0% {
        border-color: rgb(255, 0, 0);
        box-shadow: 0 0 10px rgb(255, 0, 0);
      }
      25% {
        border-color: rgb(0, 255, 0);
        box-shadow: 0 0 10px rgb(0, 255, 0);
      }
      50% {
        border-color: rgb(0, 0, 255);
        box-shadow: 0 0 10px rgb(0, 0, 255);
      }
      75% {
        border-color: rgb(255, 255, 0);
        box-shadow: 0 0 10px rgb(255, 255, 0);
      }
      100% {
        border-color: rgb(255, 0, 0);
        box-shadow: 0 0 10px rgb(255, 0, 0);
      }
    }
  </style>
</Container>
